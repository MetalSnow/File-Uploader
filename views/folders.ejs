<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>File Uploader</title>
    <script src="main.js" defer></script>
  </head>
  <body>
    <%- include('partials/leftAside.ejs') %>
    <main>
      <a href="/">↩ Home</a>
      <h2>🗂️Folders</h2>
      <form action="/folders" method="post">
        <label for="name">New folder:</label>
        <input
          type="text"
          id="name"
          name="folderName"
          placeholder="Folder Name"
          required
        />
        <button type="submit">Add➕</button>
      </form>
      <div class="folders">
        <% if(locals.folders) {%>
        <p>
          <span><%= folders.length %></span> <%= folders.length === 1 ? "Folder"
          : "Folders"%>
        </p>
        <ul>
          <%folders.forEach((folder)=>{%>
          <li class="list">
            <a href="/file-upload/<%= folder.id %>"><%= folder.name %></a>
            <form
              action="/folders/<%= folder.id %>"
              method="post"
              id="updateForm"
              style="display: none"
            >
              <input type="hidden" name="_method" value="PATCH" />
              <input
                type="text"
                id="newName"
                name="newName"
                placeholder="Folder Name"
                required
              />
              <button type="submit" id="save">Save</button>
              <button id="cancel" type="button">Cancel</button>
            </form>
            <button id="update">Edit</button>
            <form action="/folders/<%= folder.id %>" method="post">
              <input type="hidden" name="_method" value="delete" />
              <button type="submit">❌</button>
            </form>
            <a href="/share/<%= folder.id %>">Share⌯⌲</a>
          </li>
          <% })%>
        </ul>
        <% }else{ %>
        <p><span>0</span> Folders</p>
        <% } %>
      </div>
    </main>
    <%- include('partials/rightAside.ejs') %>
  </body>
</html>
