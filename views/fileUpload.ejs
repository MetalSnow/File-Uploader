<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <script src="/main.js" defer></script>
    <title>File Uploader</title>
  </head>
  <body>
    <%- include('partials/leftAside.ejs') %>
    <main class="files-container">
      <h2>üìëFiles</h2>
      <form
        action="/upload/<%= locals.id %>"
        method="post"
        enctype="multipart/form-data"
      >
        <label for="file-upload" class="custom-file-upload"
          ><img
            src="/icons/file-1.png"
            class="file-icon"
            alt="file-upload-icon"
          /><span>Upload File</span></label
        >
        <input type="file" id="file-upload" name="uploaded-file" required />
        <button type="submit">Submit file</button>
      </form>
      <div class="files">
        <table>
          <thead>
            <tr>
              <th scope="col">File Name</th>
              <th scope="col">Size</th>
              <th scope="col">Upload Time</th>
              <th scope="col">Download</th>
              <th scope="col">remove</th>
            </tr>
          </thead>
          <tbody>
            <% files.forEach((file) => { %>
            <tr>
              <th scope="row"><%= file.name %></th>
              <td><%= (file.size / 1000).toFixed(2) %>KB</td>
              <td>
                <%= file.uploadTime.toString().split(' ').slice(0, 5).join(' ')
                %>
              </td>
              <td><a href="<%= file.url %>">Download‚¨áÔ∏è</a></td>
              <td>
                <form
                  action="/delete/<%= file.id %>"
                  method="post"
                  class="delete-form"
                >
                  <input type="hidden" name="_method" value="delete" />
                  <input
                    type="hidden"
                    name="fileName"
                    value="<%= file.name %>"
                  />
                  <input
                    type="hidden"
                    name="folderId"
                    value="<%= locals.id %>"
                  />
                  <button type="submit">
                    <img src="/icons/delete.svg" alt="" />
                  </button>
                </form>
              </td>
            </tr>
            <%}); %>
          </tbody>
        </table>
      </div>
    </main>
    <%- include('partials/rightAside.ejs') %>
  </body>
</html>
